# Camaral RAG Chatbot â€” environment template
# Copy to .env and fill in values.

# Database (PostgreSQL 16 with pgvector; user/pass match docker-compose)
DATABASE_URL=postgresql+asyncpg://camaral:camaral@localhost:5432/camaral

# Google AI (Gemini API)
GOOGLE_API_KEY=

# Telegram
TELEGRAM_BOT_TOKEN=

# Logfire (optional; if set, observability is enabled)
LOGFIRE_TOKEN=
# Local/self-hosted Logfire backend URL (e.g. http://localhost:8000). Omit for Pydantic cloud.
# LOGFIRE_BASE_URL=

# RAG (k=3 to avoid all pages; use Spanish terms in search for founder/CEO)
RAG_TOP_K=2
EMBEDDING_MODEL=gemini-embedding-001
RAG_SIMILARITY_THRESHOLD=1.0

# Chat & memory
CHAT_HISTORY_LIMIT=10
CONVERSATION_TIMEOUT_SECONDS=3600

# Rate limiting (per user)
RATE_LIMIT_REQUESTS=20
RATE_LIMIT_WINDOW_SECONDS=60
